@model IEnumerable<BlogMvsApp.Models.Blog>
@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />
<p>
    @Html.ActionLink("Create New Blog", "Create")
</p>
<hr />

@if(TempData["Blog"]!=null)
{
    var blog = (BlogMvsApp.Models.Blog)TempData["Blog"];

    <div class="alert alert-success" role="alert">
        <strong>
                <span class="glyphicon glyphicon-ok"></span>
                @blog.Header
        </strong> Recorded
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmation)
        </th>
        <th style="width:160px;">

        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Explanation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddingDate)
            </td>
            <td>
                @if (item.Confirmation)
                {
                    <label class="label label-success">Home Page</label>
                }
                else
                {
                    <label class="label label-danger">Not Home Page</label>
                }
            </td>
            <td>
                @if (item.Confirmation)
                {
                    <label class="label label-success">Confirmation</label>
                }
                else
                {
                    <label class="label label-danger">Not Confirmation</label>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</table>
